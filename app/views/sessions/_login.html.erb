<div class="modal login-register" id="myModal">
  <div class="modal-header">
    <h3>Login/Register</h3>
  </div>

<%= simple_form_for(@user, url: sessions_path, remote: true, :html => { :class => "form-horizontal"}) do |f| %>
  <div class="modal-body">
    <div id="alert-area-modal"></div>

    <%= f.input :email %>
    <%= f.input :password %>

  </div>
  <div class="modal-footer">
    <div class="button-container">
      <%= f.submit "Login",:class=>"btn btn-primary", :onclick=> '$("form#new_user").attr("action", "/sessions")' %>
      <span>OR</span>
      <%= f.submit "Register",:class=>"btn btn-success pull-left", :onclick=> '$("form#new_user").attr("action", "/users")' %>
    </div>
  </div>

<% end %>

</div>