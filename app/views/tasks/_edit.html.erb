<div class="modal" id="myModal">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">Ã—</button>
    <h3><%= controller.action_name.capitalize %> Task</h3>
  </div>

<%= simple_form_for(@task, :html => { :class => "form-horizontal"}) do |f| %>
  <div class="modal-body">


    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :deadline, :order => [:day, :month, :year] %>
    <%= f.input :priority %>
    <%= f.association :status %>

  </div>
  <div class="modal-footer">
    <%= link_to "Cancel", '#', :class=>"btn", :"data-dismiss" => "modal" %>    
    <%= f.submit "Save changes",:class=>"btn btn-primary", remote: true %>
  </div>

<% end %>

</div>